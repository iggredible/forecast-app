<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<h1>Weather Forecast</h1>

<%= form_with url: show_forecasts_path, method: :get, local: true do |f| %>
  <%= f.text_field :address,
      placeholder: "Enter an address (e.g., One Apple Park Way, Cupertino, CA 95014, U.S.A.)",
      value: params[:address] %>
  <%= f.submit "Get Forecast" %>
<% end %>
